# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Set default charset and end-of-line characters
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4-space indentation, spaces only (no tabs)
indent_style = space
indent_size = 2

[*.go]
# Go standard is to use tabs with width of 4 spaces
indent_style = tab
indent_size = 2

# Disable trimming trailing whitespace for Go files, as it may affect raw string literals
trim_trailing_whitespace = false
